       Cells(8, j + 1).Value = "Outlook"
       
       If B = 1 Then
       
       's&p
        HC = Sheets(sheetname).Cells(7, j).Address
        HC_name = sheetname & "!" & HC
        'MsgBox HC_name
        col = Cells(16, 2).Address
        col_name = "Rating!" & col
           
